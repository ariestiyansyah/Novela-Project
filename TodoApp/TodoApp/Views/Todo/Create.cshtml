@model TodoApp.Models.TodoViewModels

@{
    ViewBag.Title = "Your Plan :)";
}

<div class="row">
    <div class="user">
        <div class="top">
            <div class="title">
                <h2>@ViewBag.Title</h2>
            </div>
        </div>
        <hr />
        <div class="main">
        <div class="container">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>no</th>
                                    <th>I am going to..</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int index = 0;}
                                @foreach (var todo in (dynamic)ViewData["todo"])
                                {
                                    <tr>
                                        <td>@( ++index)</td>
                                        <td>@todo.description</td>
                                    </tr>

                                }
                                <tr>
                                    <td>@(++index)</td>
                                    <td>{{ todo }}</td>
                                </tr>
                            </tbody>
                        </table>
                        @using (Html.BeginForm("Create", "Todo", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @placeholder = "Type your plan here..", data_ng_model = "todo" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-1 col-md-10">
                                    <input type="submit" class="btn btn-success" value="Create" />
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-md-4"></div>
                </div>
            </div>
        </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
